{
  "name": "ts-package-template",
  "description": "TypeScript package template to starting shipping at light speed",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": "git@github.com:fabiofcferreira/ts-package-template.git",
  "author": "FÃ¡bio Ferreira <ffcfpten@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "lint": "eslint --fix",
    "lint:check": "eslint",
    "format": "yarn prettier -w ./src",
    "format:check": "yarn prettier -l ./src",
    "test": "jest --passWithNoTests",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.8.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.3",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.15.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint",
      "yarn format"
    ],
    "docs/*.md": [
      "yarn format"
    ],
    "guides/*.md": [
      "yarn format"
    ]
  },
  "packageManager": "yarn@4.5.1"
}
