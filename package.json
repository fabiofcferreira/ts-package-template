{
  "name": "ts-package-template",
  "type": "module",
  "version": "1.0.0",
  "description": "TypeScript package template to starting shipping at light speed",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": "git@github.com:fabiofcferreira/ts-package-template.git",
